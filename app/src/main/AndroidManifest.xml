<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diaryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DiaryApp">
        <activity android:name=".Splash" android:theme="@style/Theme.DiaryApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.Register" />
        <activity android:name=".auth.Login" />
        <activity
            android:name=".diary.EditEntry"
            android:theme="@style/Theme.DiaryApp.NoActionBar" />
        <activity
            android:name=".diary.AddEntry"
            android:label="@string/title_activity_add_entry"
            android:theme="@style/Theme.DiaryApp.NoActionBar" />
        <activity
            android:name=".diary.DiaryDetails"
            android:label="@string/title_activity_diary_details"
            android:theme="@style/Theme.DiaryApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.DiaryApp.NoActionBar">
        </activity>
    </application>

</manifest>